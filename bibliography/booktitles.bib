% general macros used within nonstandard fields (remarks and abstract)
% and references of group sites:
%
% redefine \bibgroupref either with
%   \renewcommand {\bibgroupref} [2] {\bibgrouprefcite{#1}{#2}}
%	for a separate citation with group name and url or 
%   \renewcommand {\bibgroupref} [2] {\bibgroupreffoot{#1}{#2}}
%	for one (and only one!) footnote with the url
%
% redefine \bibgrouprefprefix to something else than "www" if you like.
%
% in each .bib file, add a preamble:
%   \newcounter{<group>www}
%   \providecommand {\bib<group>url} {\url{<the group's web site>}}
%   \providecommand {\bib<group>www} {\bibgroupref{<group>www}{\bib<group>url}}
% and a misc entry with key <group>www, fields 
%   title		= {<group name>}, 
%   howpublished	= {WWW page}, 
%   year		= 2000,
%   note		= {\bib<group>url},

@PREAMBLE {"
\providecommand{\bibindex}[1]{#1\index{#1}}

\providecommand{\bibgrouprefprefix}  {www}
\providecommand{\bibgrouprefcite}[2] {\bibgrouprefprefix\ \cite{#1}}
\providecommand{\bibgroupreffoot}[2] {\bibgrouprefprefix\ifnum\value{#1}=0 \footnote{#2}\setcounter{#1}{\value{footnote}}\else\footnotemark[\value{#1}]\fi}
\providecommand{\bibgroupref}    [2] {\bibgrouprefcite{#1}{#2}}
"}


